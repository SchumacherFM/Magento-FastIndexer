<?xml version="1.0"?>
<config>
    <modules>
        <SchumacherFM_FastIndexer>
            <version>1.0.0</version>
        </SchumacherFM_FastIndexer>
    </modules>

    <global>
        <blocks>
            <findex>
                <class>SchumacherFM_FastIndexer_Block</class>
            </findex>
        </blocks>

        <models>
            <findex>
                <class>SchumacherFM_FastIndexer_Model</class>
            </findex>
        </models>

        <helpers>
            <findex>
                <class>SchumacherFM_FastIndexer_Helper</class>
            </findex>
        </helpers>

        <events>
            <resource_get_tablename>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/fastIndexer</class>
                        <method>changeTableName</method>
                    </unic_fastindexer>
                </observers>
            </resource_get_tablename>

            <after_reindex_process_cataloginventory_stock>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_cataloginventory_stock>

            <after_reindex_process_catalog_product_price>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_product_price>

            <after_reindex_process_catalog_category_product>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_category_product>

            <after_reindex_process_catalog_product_attribute>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_product_attribute>

            <after_reindex_process_catalog_product_flat>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_product_flat>

            <after_reindex_process_catalog_category_flat>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>findex/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_category_flat>


        </events>

    </global>

    <default>
        <system>
            <fastindexer>
                <enable>0</enable>
            </fastindexer>
        </system>
    </default>


</config>