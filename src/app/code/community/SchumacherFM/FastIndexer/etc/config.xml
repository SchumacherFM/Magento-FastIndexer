<config>
    <modules>
        <SchumacherFM_FastIndexer>
            <version>1.0.0</version>
        </SchumacherFM_FastIndexer>
    </modules>

    <global>
        <blocks>
            <schumacherfm_fastindexer>
                <class>SchumacherFM_FastIndexer_Block</class>
            </schumacherfm_fastindexer>
        </blocks>

        <models>
            <schumacherfm_fastindexer>
                <class>SchumacherFM_FastIndexer_Model</class>
            </schumacherfm_fastindexer>
        </models>

        <resources>
            <schumacherfm_fastindexer_setup>
                <setup>
                    <module>SchumacherFM_FastIndexer</module>
                    <class>SchumacherFM_FastIndexer_Model_Resource_Setup</class>
                </setup>
            </schumacherfm_fastindexer_setup>
        </resources>

        <helpers>
            <schumacherfm_fastindexer>
                <class>SchumacherFM_FastIndexer_Helper</class>
            </schumacherfm_fastindexer>
        </helpers>

        <events>
            <resource_get_tablename>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/fastIndexer</class>
                        <method>changeTableName</method>
                    </unic_fastindexer>
                </observers>
            </resource_get_tablename>

            <after_reindex_process_catalog_product_attribute>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_product_attribute>
            <after_reindex_process_catalog_product_price>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_product_price>
            <after_reindex_process_catalog_url>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_url>
            <after_reindex_process_catalog_product_flat>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_product_flat>
            <after_reindex_process_catalog_category_flat>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_category_flat>
            <after_reindex_process_catalog_category_product>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalog_category_product>
            <after_reindex_process_catalogsearch_fulltext>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalogsearch_fulltext>
            <after_reindex_process_cataloginventory_stock>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_cataloginventory_stock>
            <after_reindex_process_catalogpermissions>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_catalogpermissions>
            <after_reindex_process_targetrule>
                <observers>
                    <unic_fastindexer>
                        <type>singleton</type>
                        <class>schumacherfm_fastindexer/tableHandler</class>
                        <method>renameTables</method>
                    </unic_fastindexer>
                </observers>
            </after_reindex_process_targetrule>
        </events>

    </global>

    <default>
        <schumacherfm>
            <fastindexer>
                <enable>0</enable>
                <dropOldTable>1</dropOldTable>
                <echo>0</echo>
            </fastindexer>
        </schumacherfm>
    </default>


</config>